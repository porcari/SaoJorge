<?xml version="1.0"?>
<root>
  <OBJECT NAME="CLIENTES">
    <METHOD NAME="ListarSimples" DESCRIPTION="Clientes" VERSION="1" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="CLIENTE" SIZE="120" FLAGS="1" STYLE="5" PROJECTION="0" ORDER="1" LOOKUP="MILLENIUM.CLIENTES.LISTA_FILTROPOPUP" LOOKUPKEY="CLIENTE" LOOKUPDISPLAY="NOME" LOOKUPCODE="COD_CLIENTE" FIELDLABEL="Cliente" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="CPF_CNPJ" SIZE="17" FLAGS="1" PROJECTION="0" ORDER="4" FIELDLABEL="Documento" CTAB="0"/>
        <FIELD NAME="DESEJA_RECEBER_EMAIL" FORMAT="B" SIZE="1" FLAGS="1" PROJECTION="0" ORDER="11" FIELDLABEL="Deseja Receber Email" CTAB="0"/>
        <FIELD NAME="NOME" SIZE="120" FLAGS="1" PROJECTION="0" ORDER="3" FIELDLABEL="Nome" CTAB="0"/>
        <FIELD NAME="E_MAIL" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="10" FIELDLABEL="E Mail" CTAB="0"/>
        <FIELD NAME="DATA_ANIVERSARIO" FORMAT="D" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="6" FIELDLABEL="Data Aniversario" CTAB="0"/>
        <FIELD NAME="TIPO_SEXO" SIZE="15" FLAGS="1" PROJECTION="0" ORDER="5" FIELDLABEL="Sexo" CTAB="0"/>
        <FIELD NAME="IDADE" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Idade" CTAB="0"/>
        <FIELD NAME="CIDADE" SIZE="60" FLAGS="1" PROJECTION="0" ORDER="12" FIELDLABEL="Cidade" CTAB="0"/>
        <FIELD NAME="ESTADO" SIZE="3" FLAGS="1" PROJECTION="0" ORDER="13" FIELDLABEL="Estado" CTAB="0"/>
        <FIELD NAME="DDD" SIZE="4" FLAGS="1" PROJECTION="0" ORDER="8" FIELDLABEL="Ddd" CTAB="0"/>
        <FIELD NAME="TELEFONE" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="9" FIELDLABEL="Telefone" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT IIF(CL.PF_PJ='PF',CL.CPF,CL.CNPJ) AS CPF_CNPJ,
       CL.MALAELETRONICA AS DESEJA_RECEBER_EMAIL,
       CL.NOME,
       CL.E_MAIL,
       CL.DATA_ANIVERSARIO,
       #IF(CL.TIPO_SEXO='F','Feminino',#IF(CL.TIPO_SEXO='M','Masculino','N&#227;o Aplic&#225;vel')) AS TIPO_SEXO,
       IIF(CL.DATA_ANIVERSARIO IS NULL,NULL,DATEDIFF(YEAR,CL.DATA_ANIVERSARIO, CURRENT_TIMESTAMP)) AS IDADE,
       E.CIDADE,
       E.ESTADO,
       CL.DDD,
       CL.CEL AS TELEFONE
FROM CLIENTES CL
INNER JOIN ENDERECOS_CADASTRO E ON E.GERADOR=CL.GERADOR
WHERE E.ENDERECO_NOTA = 'T'
      [AND CL.CLIENTE =:CLIENTE]
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>